@page "/register"
@model Mysln.Client.Pages.RegisterModel
@{
}

<h3>Login Form</h3>
<form method="post" asp-page="RegisterPage">
    <table>
        <tr>
            <td>FirstName</td>
            <td><input type="text" asp-for="FirstName" /></td>
        </tr>
        <tr>
            <td>LastName</td>
            <td><input type="text" asp-for="LastName" /></td>
        </tr>
        <tr>
            <td>Email</td>
            <td><input type="text" asp-for="Email" /></td>
        </tr>
        <tr>
            <td>Password</td>
            <td><input type="password" asp-for="Password" /></td>
        </tr>
        <tr>
            <td> </td>
            <td><input type="submit" value="Register" /></td>
        </tr>
    </table>
</form>
